<ion-content>



<form ng-submit="createperson(person)" name="newPerson">

<div class="list">

     <label class="item item-input">
          <input type="text" required placeholder="您的名字?" ng-model="person.name">
        <!--
          -->
     </label>
		 <label class="item item-input">
          <input type="password" required placeholder="密码?" ng-model="person.alias">
        <!--
          -->
     </label>
     <label class="item item-input">
          <input type="text" placeholder="职位?" ng-model="person.title">
        <!--
          -->
     </label>
          <label class="item item-input">
          <input type="text" placeholder="年龄?" ng-model="person.age">
        <!--
          -->
     </label>
     </label>
          <label class="item item-input">
          <input type="text" placeholder="手机号码?" required ng-model="person.mobile">
        <!--
          -->
     </label>
</div>



<div class="padding">

     <button type="submit" ng-disabled="newPerson.$invalid" class="button button-block button-positive">创建管理员账户</button>

</div>

